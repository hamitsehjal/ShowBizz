@model HS2231A5.Models.ShowWithInfoViewModel

@{
    ViewBag.Title = "Details";
    var userAccount = new HS2231A5.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd>
            <img src="@Model.ImageUrl" alt="@Model.Name" style="max-height: 150px; max-width: 150px;" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Coordinator)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Coordinator)
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.ActorsCount)
            <span class="badge">@Html.DisplayFor(model => model.ActorsCount)</span>
        </dt>

        <dd>
            @foreach (var item in Model.Actors)
                {
                <p>@item.Name</p>
                }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EpisodesCount)
            <span class="badge"> @Html.DisplayFor(model => model.EpisodesCount)</span>
        </dt>

        <dd>
            @foreach (var item in Model.Episodes)
                {
                <p>@item.Name</p>
                }
        </dd>

    </dl>
    <div>
        @{ if (!string.IsNullOrWhiteSpace(Model.Premise))

                {
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Premise)
                    </dt>
                    <dd class="well">
                        @Html.Raw(Model.Premise)
                    </dd>
                </dl>
                }
        }
    </div>
</div>
<p>
    @{ if (userAccount.HasRoleClaim("Clerk"))
            {
            @Html.ActionLink("Add New Episode", "AddEpisode", new { id = Model.Id })
            <span> | </span>

            }
    }
    @Html.ActionLink("Back to List", "Index")
</p>
